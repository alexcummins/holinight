<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"

    tools:context=".LoginActivity">
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/arrowImageView"
        android:layout_height="150dp" />

    <RelativeLayout
        android:layout_height="45dp"
        android:layout_below="@+id/arrowImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/email_ly"
        android:layout_width="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_box_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_text"
            android:drawableLeft="@drawable/username"
            android:textColor="#42479e"
            android:drawablePadding="5dp"
            android:textColorHint="#42479e"
            android:textSize="13sp"
            android:hint="Email"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/transperent_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/email_ly"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/password_ly"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_box_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/password_text"
            android:drawableLeft="@drawable/password"
            android:textColor="#42479e"
            android:drawablePadding="5dp"
            android:textColorHint="#42479e"
            android:textSize="13sp"
            android:hint="Password"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"
            android:background="@color/transperent_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/login"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_ly">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOGIN"
            android:id="@+id/login_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="?android:borderlessButtonStyle"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:onClick="loginButton" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:text="Forgotten Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textColor="#42479e"
            android:textSize="10sp"
            android:textAlignment="textEnd" />

        <Button
            android:text="Click Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_password_button"
            android:layout_weight="1"
            android:textColor="#42479e"
            android:background="@color/transperent_color"
            android:textStyle="normal|bold"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textAlignment="textStart"
            android:layout_marginLeft="5dp"
            android:onClick="forgotPasswordButton" />
    </LinearLayout>
</RelativeLayout>